name: publish

on:
  workflow_dispatch:
    inputs:
      version:
        description: 'Version upload to PyPI'
        required: true

jobs:
  run:
    name: Upload PDFO ${{ github.event.inputs.version }} to PyPI
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Setup Python
        uses: actions/setup-python@v4

      - name: Download distributions from staging
        run: bash build_tools/github/download_anaconda.sh
        env:
          PDFO_VERSION: ${{ github.event.inputs.version }}

      - name: Publish to PyPI
        uses: pypa/gh-action-pypi-publish@v1.6.4
        with:
          user: __token__
          password: ${{ secrets.PYPI_SQLITEFRAME_API_TOKEN }}
